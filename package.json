{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "format": "prettier --write \"packages/**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "lerna": "^3.0.4",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@types/node": "^10.7.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts"
    ]
  }
}
